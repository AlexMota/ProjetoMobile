<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
 
    <!-- From Label -->
    <TextView
        android:id="@+id/fromMensSel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dip"
        android:paddingLeft="8dip"
        android:paddingBottom="4dip"
        android:textSize="30sp"
        android:textStyle="bold" />
     
    <!-- Mail Subject -->
    <TextView android:id="@+id/subjectMensSel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="8dip"
        android:paddingBottom="6dip"
        android:textSize="25sp"
        android:layout_below="@id/fromMensSel"/>
     
    <!-- Mail date -->
    <TextView android:id="@+id/dateMensSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="12sp"/>
    
    <!-- corpo da mensagem -->
    <TextView android:id="@+id/message_textMensSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="18sp"
        android:layout_below="@id/subjectMensSel"/>  
</RelativeLayout>